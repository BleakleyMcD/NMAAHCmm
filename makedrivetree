#!/usr/bin/env bash

# a script to write the contents of a directory in tree form and save it to a .txt file

### CONSTANTS

date="$(date +%Y%m%d)"
biwhite=$(tput bold)$(tput setaf 7)
bired=$(tput bold)$(tput setaf 1)
color_off=$(tput sgr0)

### FUNCTIONS

makedrivetree()
{
local drive ; #set local variable $drive
local folder=$HOME/Google_Drive/05_DriveContents/
  for drive ; do
    	drive="${drive%/}" #strip trailing / if any
    if [ -d "$drive" ] ; then
      output=${drive##*/}_contents_"$date".txt
      output="$folder/$output"
			if [ -d $folder ] ; then
      	tree --filelimit 30 --si --du -U -Q -o "$output" "$drive"
        if grep "0 directories, 0 files" "$output" ; then
          printf "%s$drive is empty. Adding EMPTY to file name.\n%s" "$biwhite" "$color_off" &&
          outputE="$folder/${drive##*/}_contents_"$date"_EMPTY.txt" &&
          mv -v "$output" "$outputE"
          printf "%sMoving ${outputE##*/} to $drive\n%s" "$biwhite" "$color_off"
          cp -v "$outputE" "$drive"
        else
          printf "%s$drive is not empty" "$biwhite"
          cp -va "$output" "$drive"
        fi
			else
        printf "%sError $folder does not exist\n" "$bired" >&2
				exit
      fi
    else
      printf "%sError $drive does not exist.\n" "$bired" >&2
			exit
    fi
  done
}

#call the function(s)

makedrivetree "$@"

exit "$?"
